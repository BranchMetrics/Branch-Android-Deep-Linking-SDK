<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:visibility="gone" />


        <Button
            android:id="@+id/bt_buo_obj_with_meta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Create BUO With MetaData"
            android:textAllCaps="false"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_create_deep_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Create Deep Link"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/bt_native_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Native Share Branch Link"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_track_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Set Identity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_create_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Create QR Code"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/bt_set_dma_params"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Set DMA Params"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/bt_init_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Init Session"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/bt_logEvent_with_callback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Send Standard Event"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_set_attribution_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Set Attribution Level"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_Read_Logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="Read Logs"
            android:textAllCaps="false" />
        <ToggleButton
            android:id="@+id/tracking_cntrl_btn"
            style="@style/testbed_button_style"
            android:layout_alignParentRight="true"
            android:textOff="Tracking Enabled"
            android:textOn="Tracking Disabled" />

    </LinearLayout>
</ScrollView>